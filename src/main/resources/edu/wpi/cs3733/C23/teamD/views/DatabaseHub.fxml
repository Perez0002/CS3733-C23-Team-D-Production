                                    <Insets right="25.0" />
                                 </HBox.margin>
                                 <graphic>
                                    <FontIcon iconColor="#fffdfd" iconLiteral="fltfal-cloud-download-24" iconSize="30" wrappingWidth="20.0" />
                                 </graphic>
                              </MFXButton>
                              <MFXButton fx:id="UploadButton" onAction="#uploadData" prefHeight="45.0" prefWidth="50.0" styleClass="Button" stylesheets="@tableCSS.css" text=" " textFill="#012d5a">
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="fltfal-cloud-backup-24" iconSize="30" wrappingWidth="20.0" />
                                 </graphic>
                                 <HBox.margin>
                                    <Insets right="50.0" />
                                 </HBox.margin>
                              </MFXButton>
                           </children>
                        </HBox>
                     </left>
                  </BorderPane>
                        <MFXButton fx:id="cancelButton" prefHeight="45.0" prefWidth="80.0" styleClass="cancelButton" stylesheets="@updatedStyleGuide.css" text="Cancel" />
                        <MFXButton fx:id="submitButton" prefHeight="45.0" prefWidth="80.0" styleClass="submitButton" stylesheets="@updatedStyleGuide.css" text="Submit" />
