<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="MoveTableBorderPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.C23.teamD.database.controllers.MoveTableController">
    <center>
    <TableView fx:id="moveTable" maxHeight="500.0" minHeight="500.0" onMouseClicked="#getSelectedRow" prefHeight="500.0" style="-fx-background-radius: 5; -fx-border-radius: 5;">
        <placeholder>
            <Label alignment="center" text="No content in table" />
        </placeholder>
    <columns>
    <TableColumn fx:id="moveNodeID" prefWidth="144.0" styleClass="tableCSS.css" text="Node ID" />
    <TableColumn fx:id="moveLongName" prefWidth="133.0" styleClass="tableCSS.css" text="Long Name" />
    <TableColumn fx:id="moveDate" prefWidth="133.0" styleClass="tableCSS.css" text="Move Date" />
            <TableColumn fx:id="message" prefWidth="133.0" styleClass="tableCSS.css" text="Message" />
    </columns>
    </TableView>
    </center>
</BorderPane>
