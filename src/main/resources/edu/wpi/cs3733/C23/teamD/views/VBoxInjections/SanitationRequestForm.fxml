<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXRadioButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="625.0" prefWidth="625.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.C23.teamD.controllers.SanitationRequestController">
   <children>
      <Label text="Sanitation Request Form">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Enter Staff ID" />
            <MFXTextField fx:id="staffIDTextField" floatingText="Staff ID" prefHeight="49.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Select Area That Needs Service" />
            <fx:include fx:id="fieldLocation" maxWidth="-Infinity" minWidth="-Infinity" snapToPixel="false" source="Components/RoomPickComboBox.fxml" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Describe the Issue" />
            <MFXTextField fx:id="fieldReason" floatingText="Reason" prefHeight="107.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <Label text="How Hazardous is the Issue" />
            <MFXRadioButton fx:id="radioBSL1" text="BSL-1 - Minimal Hazards">
            <toggleGroup>
               <ToggleGroup fx:id="Button" />
            </toggleGroup>
            </MFXRadioButton>
            <MFXRadioButton fx:id="radioBSL2" text="BSL-2 - Moderate Hazards" toggleGroup="$Button" />
            <MFXRadioButton fx:id="radioBSL3" text="BSL-3 - Serious Hazards" toggleGroup="$Button" />
            <MFXRadioButton fx:id="radioBSL4" text="BSL-4 - Most Complex" toggleGroup="$Button" />
         </children>
      </VBox>
   </children>
</VBox>
